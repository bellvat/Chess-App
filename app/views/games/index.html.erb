<div class="background">
  <div class="text-center"><%= link_to "Create a New Game", new_game_path, class: "btn btn-newgame" %></div>

  <div class = "container">
   <!-- UNMATCHED GAMES -->
    <div class="section">
      <h1 class="text-center">Join A Match</h1>
      
          <% if @unmatched_games.any? %>
            <% @unmatched_games.each do |game| %>
              <div class="row indexgame">
                <span class="column">
                <h5 class="text-center"><%= "Game #{game.id}" %></h5>
                  <% if game.white_player_user_id.blank? && current_user != game.white_player_user_id %>
                      <%= simple_form_for game, url: join_game_path(game) do |f| %>
                      <h6 class="text-center"><%= "Opponent: #{game.black_player.email}" %></h5></span>
                        <%= f.input :white_player_user_id, as: :hidden, :input_html => { :value => current_user.id } %>
                        <%= f.input :turn_user_id, as: :hidden, :input_html => { :value => current_user.id } %>
                        <br />
                        <span class="column"><%= f.submit "Join as white player", class: "btn btn-secondary btn-sm" %></span>
                      <% end %>
                    
                  <% else %>
                      <%= simple_form_for game, url: join_game_path(game) do |f| %>
                       <h6 class="text-center"><%= "Opponent: #{game.white_player.email}" %></h6>
                        <%= f.input :black_player_user_id, as: :hidden, :input_html => { :value => current_user.id } %>
                         <span class="row text-center"><%= f.submit "Join as black player", class: "btn btn-inverse btn-sm" %>
                      <% end %>
                  
                    
                    <% if ((current_user.id == game.white_player_user_id) && game.black_player_user_id.blank?) || ((current_user.id == game.black_player_user_id) && game.white_player_user_id.blank?) %>
                      <%= link_to "Delete", game_path(game), :method => :delete, :class => "delete btn btn-danger btn-sm", :data => {:confirm => "Are you sure you want to delete this game?"} %>
                    <% end %></span>
                  <% end %>
              </div>
            <% end %>
          <%else%>
            <h3 class="text-center">No games to join :(</h3>
          <%end%>

    </div>


  <!-- STARTED GAMES -->
  <div class="section">
    <h1 class="text-center">Your Unfinished Matches</h1>
      <ul class='game-list'>
        <% if @started_games.any? %>
          <% @started_games.each do |game| %>
            <div class="indexgame">
              <li><h5><%= "Game No. #{game.id}" %></h5></li>           
              <% if current_user && (current_user.id == game.white_player_user_id || current_user.id == game.black_player_user_id) %>
                <% if game.turn_user_id == current_user.id %>
                  <li><%= link_to 'Your Turn!', game_path(game, id: game.id), :class => 'btn btn-success btn-sm join-game-link' %></li>
                <% else %>
                  <li><%= link_to "Your Opponent's Turn", game_path(game, id: game.id), :class => 'btn btn-info btn-sm join-game-link' %></li>
                <% end %>
                <% if current_user.id == game.white_player_user_id %>
                  <li><h5><%= "Opponent: #{game.black_player.email}" %></h5></li>
                <% else %>
                  <li><h5><%= "Opponent: #{game.white_player.email}" %></h5></li>
                <% end %>
              <% else %>
                <li><%= link_to 'Watch Game', game_path(game, id: game.id), :class => 'btn btn-success btn-sm join-game-link' %></li>
              <% end %>
              <%= link_to "Delete", game_path(game), :method => :delete, :class => "btn btn-danger btn-sm", :data => {:confirm => "Are you sure you want to delete this game?"} %>
            </div>
          <% end %>
        <% else %>
          <h3 class="text-center">No games in play :(</h3>
        <% end %>
      </ul>
  </div>

  <!-- COMPLETED GAMES -->
  <div class="section">
    <h1 class="text-center">Completed Matches</h1>
      <ul class='game-list'>
        <% if @completed_games.any? %>
          <% @completed_games.each do |game| %>
            <div class="indexgame">
              <% if game.winner_user_id.present? && game.loser_user_id.present? %>
                <h5><%= game.winner.email %> won the game against <%= game.loser.email %></h5>
              <% else %>
                <% if game.white_player_user_id.present? && game.black_player_user_id.present? %>
                  <h5>Stalemate between <%= game.white_player.email %> and <%= game.black_player.email %></h5>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <h3>No completed games :(</h3>
        <% end %>
      </ul>
  </div>
  </div>
</div>
